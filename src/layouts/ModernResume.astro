---
import "@fontsource/poppins";
import "../styles.css";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import { Icon } from 'astro-icon/components';

interface Props {
  frontmatter: {
    title: string;
    name: string;
    role: string;
    pdfLink: string;
    about?: string;
    lang?: 'en' | 'de';
    socials: {
      name: string;
      url: string;
      icon: string; // SVG path or identifier
    }[];
    facts: {
      email: string;
      location: string;
      nationality: string;
      birth: string;
    };
    competencies: {
      leadership: string[];
      technology: string[];
    };
    languages: {
      language: string;
      level: string;
    }[];
    leadershipPillars?: {
      title: string;
      description: string;
    }[];
  };
}

const PDF_VIEW = import.meta.env.PUBLIC_PDF_VIEW === "true";
const FORCE_THEME = import.meta.env.FORCE_THEME || "";
const { frontmatter } = Astro.props;
const { name, role, socials, facts, competencies, languages, pdfLink, leadershipPillars, lang = 'en' } = frontmatter;

const translations = {
  en: {
    facts: "Facts",
    download: "Download Resume",
    downloadPdf: "Download PDF",
    competencies: "Core Competencies",
    leadership: "Leadership",
    technology: "Technology",
    languages: "Languages"
  },
  de: {
    facts: "Persönliche Daten",
    download: "Lebenslauf herunterladen",
    downloadPdf: "PDF herunterladen",
    competencies: "Kernkompetenzen",
    leadership: "Führungskompetenz",
    technology: "Technologie",
    languages: "Sprachen"
  }
};

const t = translations[lang as keyof typeof translations] || translations.en;
---

<!doctype html>
<html lang={lang} class={FORCE_THEME}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <title>{frontmatter.title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen font-sans text-gray-900 dark:text-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <!-- Header -->
      <div class="mb-12 relative">
        {!PDF_VIEW && (
          <div class="absolute right-0 top-0">
            <LanguageSwitcher currentLang={lang} />
          </div>
        )
      }
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{name}</h1>
        <p class="text-xl text-gray-700 dark:text-gray-300 mb-6">{role}</p>
        <div class="flex flex-wrap gap-4">
          {socials.map((social) => (
            <a href={social.url} class={`inline-flex items-center px-4 py-2 rounded-md transition-colors font-medium ${social.icon === 'mdi:email' ? 'bg-picton-blue-900 text-white hover:bg-picton-blue-800' : 'bg-white dark:bg-gray-800 border border-picton-blue-200 dark:border-gray-700 text-picton-blue-700 dark:text-picton-blue-300 hover:bg-picton-blue-50 dark:hover:bg-gray-700'}`}>
              <Icon name={social.icon} class={`h-5 w-5 mr-2 ${social.name === 'LinkedIn' ? 'text-[#0077b5]' : ''}`} />
              {social.name}
            </a>
          ))}
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
        
        <!-- Sidebar -->
        <div class="space-y-6 lg:sticky lg:top-8 print:hidden">
          
          <!-- Get in Touch -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
            <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">{t.facts}</h3>
            <ul class="space-y-3 text-sm text-gray-700 dark:text-gray-300">
              <li class="flex items-center">
                 <Icon name="mdi:email" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400" />
                 <a href={`mailto:${facts.email}`} class="hover:text-gray-900 dark:hover:text-white break-all">{facts.email}</a>
              </li>
              <li class="flex items-center">
                 <Icon name="mdi:map-marker" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400" />
                 <span>{facts.location}</span>
              </li>
              {facts.nationality && (
                <li class="flex items-center">
                   <Icon name="mdi:flag" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400" />
                   <span>{facts.nationality}</span>
                </li>
              )}
              {facts.birth && (
                <li class="flex items-center">
                   <Icon name="mdi:calendar" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400" />
                   <span>{new Date(facts.birth).toLocaleDateString(lang, { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                </li>
              )}
            </ul>
          </div>

          <!-- Download Resume -->
          {!PDF_VIEW && (
            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
              <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">{t.download}</h3>
              <a href={pdfLink} class="flex items-center justify-center w-full px-4 py-2 bg-picton-blue-900 text-white rounded-md hover:bg-picton-blue-800 transition-colors font-medium text-sm">
                <Icon name="mdi:download" class="h-4 w-4 mr-2" />
                {t.downloadPdf}
              </a>
            </div>
          )
        }

          <!-- Core Competencies -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
            <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">{t.competencies}</h3>
            
            <div class="mb-4">
              <h4 class="font-semibold text-sm text-gray-900 dark:text-white uppercase tracking-wider mb-2">{t.leadership}</h4>
              <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
                {competencies.leadership.map(skill => (
                  <li class="flex items-center">
                    <span class="w-1.5 h-1.5 bg-gray-700 dark:bg-gray-300 rounded-full mr-2"></span>
                    {skill}
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <h4 class="font-semibold text-sm text-gray-900 dark:text-white uppercase tracking-wider mb-2">{t.technology}</h4>
              <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
                {competencies.technology.map(skill => (
                  <li class="flex items-start">
                    <span class="w-1.5 h-1.5 bg-gray-700 dark:bg-gray-300 rounded-full mt-1.5 shrink-0 mr-2"></span>
                    <span>{skill}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>

         

          <!-- Languages -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
            <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">{t.languages}</h3>
            <div class="space-y-2 text-sm">
              {languages.map(lang => (
                <div class="flex justify-between">
                  <span class="text-gray-700 dark:text-gray-300">{lang.language}</span>
                  <span class="font-medium text-gray-900 dark:text-white">{lang.level}</span>
                </div>
              ))}
            </div>
          </div>

        </div>

        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8 print:col-span-3 print:w-full">
          {/* Print-only Sidebar Items Grid */}
          <div class="hidden print:grid grid-cols-2 gap-6 mb-8">
            {/* Column 1: Facts & Languages */}
            <div class="space-y-6">
              {/* Facts */}
              <div class="border border-gray-200 p-4 rounded-lg">
                <h3 class="font-bold text-lg mb-3 text-gray-900">{t.facts}</h3>
                <ul class="space-y-2 text-sm text-gray-700">
                  <li class="flex items-center">
                     <Icon name="mdi:email" class="h-4 w-4 mr-2 text-gray-500" />
                     <span>{facts.email}</span>
                  </li>
                  <li class="flex items-center">
                     <Icon name="mdi:map-marker" class="h-4 w-4 mr-2 text-gray-500" />
                     <span>{facts.location}</span>
                  </li>
                  {facts.nationality && (
                    <li class="flex items-center">
                       <Icon name="mdi:flag" class="h-4 w-4 mr-2 text-gray-500" />
                       <span>{facts.nationality}</span>
                    </li>
                  )}
                  {facts.birth && (
                    <li class="flex items-center">
                       <Icon name="mdi:calendar" class="h-4 w-4 mr-2 text-gray-500" />
                       <span>{new Date(facts.birth).toLocaleDateString(lang, { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                    </li>
                  )}
                </ul>
              </div>

              {/* Languages */}
              <div class="border border-gray-200 p-4 rounded-lg">
                <h3 class="font-bold text-lg mb-3 text-gray-900">{t.languages}</h3>
                <div class="space-y-2 text-sm">
                  {languages.map(lang => (
                    <div class="flex justify-between">
                      <span class="text-gray-700">{lang.language}</span>
                      <span class="font-medium text-gray-900">{lang.level}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            {/* Column 2: Competencies */}
            <div class="border border-gray-200 p-4 rounded-lg">
              <h3 class="font-bold text-lg mb-3 text-gray-900">{t.competencies}</h3>
              
              <div class="mb-4">
                <h4 class="font-semibold text-xs text-gray-900 uppercase tracking-wider mb-2">{t.leadership}</h4>
                <ul class="space-y-1 text-sm text-gray-700">
                  {competencies.leadership.map(skill => (
                    <li class="flex items-center">
                      <span class="w-1 h-1 bg-gray-700 rounded-full mr-2"></span>
                      {skill}
                    </li>
                  ))}
                </ul>
              </div>

              <div>
                <h4 class="font-semibold text-xs text-gray-900 uppercase tracking-wider mb-2">{t.technology}</h4>
                <ul class="space-y-1 text-sm text-gray-700">
                  {competencies.technology.map(skill => (
                      <li class="flex items-center">
                         <span class="w-1 h-1 bg-gray-700 rounded-full mr-2"></span>
                      {skill}
                      </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>

          <div class="prose prose-picton-blue dark:prose-invert max-w-none text-gray-700 dark:text-gray-300">
            {/* About Me Section (moved from markdown body) */}
            {frontmatter.about && (
              <section class="mb-8">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 !mt-0">{lang === 'de' ? 'Über Mich' : 'About Me'}</h2>
                <div class="whitespace-pre-line mb-8">{frontmatter.about}</div>

                {/* Leadership Pillars */}
                {leadershipPillars && leadershipPillars.length > 0 && (
                  <div>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{lang === 'de' ? 'Die 4 Säulen meines Führungsstils' : 'The 4 Pillars of My Leadership Style'}</h3>
                     <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      {leadershipPillars.map((pillar) => (
                        <div class="bg-white dark:bg-gray-800 p-4 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700 break-inside-avoid print:border-gray-200 print:shadow-none print:rounded-lg">
                          <h4 class="font-bold text-lg mb-2 text-gray-900 dark:text-white">{pillar.title}</h4>
                          <p class="text-sm text-gray-700 dark:text-gray-300">{pillar.description}</p>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </section>
            )}

            <slot />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

