---
import "@fontsource/poppins";
import "../styles.css";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import { Icon } from 'astro-icon/components';

interface Props {
  frontmatter: {
    title: string;
    name: string;
    role: string;
    pdfLink: string;
    lang?: 'en' | 'de';
    socials: {
      name: string;
      url: string;
      icon: string; // SVG path or identifier
    }[];
    facts: {
      email: string;
      location: string;
      nationality: string;
      birth: string;
    };
    competencies: {
      leadership: string[];
      technology: string[];
    };
    education: {
      institution: string;
      degree: string;
      thesis?: string;
      year: string;
    }[];
    languages: {
      language: string;
      level: string;
    }[];
    experience: {
      role: string;
      company: string;
      period: string;
      description: string;
      details?: {
        label: string;
        text: string;
      }[];
    }[];
    projects: {
      name: string;
      description: string;
    }[];
  };
}

const PDF_VIEW = import.meta.env.PUBLIC_PDF_VIEW === "true";
const FORCE_THEME = import.meta.env.FORCE_THEME || "";
const { frontmatter } = Astro.props;
const { name, role, socials, facts, competencies, education, languages, experience, pdfLink, lang = 'en' } = frontmatter;

type Job = typeof experience[number];

const experienceByCompany = experience.reduce((acc, job: Job) => {
  acc[job.company] = [...(acc[job.company] || []), job];
  return acc;
}, {} as Record<string, Job[]>);

type Edu = typeof education[number];

const educationByInstitution = education.reduce((acc, edu: Edu) => {
  acc[edu.institution] = [...(acc[edu.institution] || []), edu];
  return acc;
}, {} as Record<string, Edu[]>);
---

<!doctype html>
<html lang={lang} class={FORCE_THEME}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    
    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest" />
    <title>{frontmatter.title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen font-sans text-gray-900 dark:text-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <!-- Header -->
      <div class="mb-12 relative">
        {!PDF_VIEW && (
          <div class="absolute right-0 top-0">
            <LanguageSwitcher currentLang={lang} />
          </div>
        )
      }
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{name}</h1>
        <p class="text-xl text-gray-700 dark:text-gray-300 mb-6">{role}</p>
        <div class="flex flex-wrap gap-4">
          {socials.map((social) => (
            <a href={social.url} class={`inline-flex items-center px-4 py-2 rounded-md transition-colors font-medium ${social.name === 'Contact Me' ? 'bg-picton-blue-900 text-white hover:bg-picton-blue-800' : 'bg-white dark:bg-gray-800 border border-picton-blue-200 dark:border-gray-700 text-picton-blue-700 dark:text-picton-blue-300 hover:bg-picton-blue-50 dark:hover:bg-gray-700'}`}>
              <Icon name={social.icon} class={`h-5 w-5 mr-2 ${social.name === 'LinkedIn' ? 'text-[#0077b5]' : ''}`} />
              {social.name}
            </a>
          ))}
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
        
        <!-- Sidebar -->
        <div class="space-y-6 lg:sticky lg:top-8">
          
          <!-- Get in Touch -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
            <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Facts</h3>
            <ul class="space-y-3 text-sm text-gray-700 dark:text-gray-300">
              <li class="flex items-start">
                 <Icon name="mdi:email" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400 mt-0.5" />
                 <a href={`mailto:${facts.email}`} class="hover:text-gray-900 dark:hover:text-white break-all">{facts.email}</a>
              </li>
              <li class="flex items-start">
                 <Icon name="mdi:map-marker" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400 mt-0.5" />
                 <span>{facts.location}</span>
              </li>
              {facts.nationality && (
                <li class="flex items-start">
                   <Icon name="mdi:flag" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400 mt-0.5" />
                   <span>{facts.nationality}</span>
                </li>
              )}
              {facts.birth && (
                <li class="flex items-start">
                   <Icon name="mdi:calendar" class="h-5 w-5 mr-2 text-gray-500 dark:text-gray-400 mt-0.5" />
                   <span>{new Date(facts.birth).toLocaleDateString(lang, { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                </li>
              )}
            </ul>
          </div>

          <!-- Download Resume -->
          {!PDF_VIEW && (
            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
              <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Download Resume</h3>
              <a href={pdfLink} class="flex items-center justify-center w-full px-4 py-2 bg-picton-blue-900 text-white rounded-md hover:bg-picton-blue-800 transition-colors font-medium text-sm">
                <Icon name="mdi:download" class="h-4 w-4 mr-2" />
                Download PDF
              </a>
            </div>
          )
        }

          <!-- Core Competencies -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
            <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Core Competencies</h3>
            
            <div class="mb-4">
              <h4 class="font-semibold text-sm text-gray-900 dark:text-white uppercase tracking-wider mb-2">Leadership</h4>
              <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
                {competencies.leadership.map(skill => (
                  <li class="flex items-center">
                    <span class="w-1.5 h-1.5 bg-gray-700 dark:bg-gray-300 rounded-full mr-2"></span>
                    {skill}
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <h4 class="font-semibold text-sm text-gray-900 dark:text-white uppercase tracking-wider mb-2">Technology</h4>
              <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
                {competencies.technology.map(skill => (
                 
                    <span class="w-1.5 h-1.5 bg-gray-700 dark:bg-gray-300 rounded-full mt-1.5 flex-shrink-0"></span>
                    <span>{skill}</span>
                 
                ))}
              </ul>
            </div>
          </div>

         

          <!-- Languages -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
            <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Languages</h3>
            <div class="space-y-2 text-sm">
              {languages.map(lang => (
                <div class="flex justify-between">
                  <span class="text-gray-700 dark:text-gray-300">{lang.language}</span>
                  <span class="font-medium text-gray-900 dark:text-white">{lang.level}</span>
                </div>
              ))}
            </div>
          </div>

        </div>

        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
          
          <!-- About Me -->
          <section>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">About Me</h2>
            <div class="prose prose-picton-blue dark:prose-invert max-w-none text-gray-700 dark:text-gray-300">
              <slot />
            </div>
          </section>

          <!-- Work Experience -->
          <section>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Experience</h2>
            
            <div class="space-y-6">
              {Object.entries(experienceByCompany).map(([company, jobs]) => (
                <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
                  <h3 class="font-bold text-xl text-gray-900 dark:text-white mb-4">{company}</h3>
                  <div class="space-y-4">
                    {jobs.map(job => (
                      <div class="border-l-2 border-picton-blue-200 pl-4">
                        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-2">
                          <div>
                            <h4 class="font-bold text-lg text-gray-900 dark:text-white">{job.role}</h4>
                          </div>
                          <div class="text-sm text-gray-600 dark:text-gray-300 mt-1 sm:mt-0 bg-picton-blue-50 dark:bg-gray-700 px-2 py-1 rounded">{job.period}</div>
                        </div>
                        <p class="text-gray-700 dark:text-gray-300 mb-3 text-sm">
                          {job.description}
                        </p>
                        {job.details && job.details.length > 0 && (
                          <ul class="list-disc list-outside ml-4 space-y-1 text-sm text-gray-700 dark:text-gray-300">
                            {job.details.map(detail => (
                              <li><strong>{detail.label}:</strong> {detail.text}</li>
                            ))}
                          </ul>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </section>

          <!-- Education -->
          <section>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Education</h2>
            <div class="space-y-6">
              {Object.entries(educationByInstitution).map(([institution, degrees]) => (
                <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-picton-blue-100 dark:border-gray-700">
                  <h3 class="font-bold text-xl text-gray-900 dark:text-white mb-4">{institution}</h3>
                  <div class="space-y-4">
                    {degrees.map(edu => (
                      <div class="border-l-2 border-picton-blue-200 pl-4">
                        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-2">
                          <div>
                            <h4 class="font-bold text-lg text-gray-900 dark:text-white">{edu.degree}</h4>
                          </div>
                          <div class="text-sm text-gray-600 dark:text-gray-300 mt-1 sm:mt-0 bg-picton-blue-50 dark:bg-gray-700 px-2 py-1 rounded">{edu.year}</div>
                        </div>
                        {edu.thesis && (
                          <p class="text-gray-700 dark:text-gray-300 mb-3 text-sm">
                            <strong>Thesis:</strong> {edu.thesis}
                          </p>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </section>

          <!-- Key Projects 
          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Key Projects & Achievements</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {projects.map(project => (
                <div class="bg-white p-5 rounded-xl shadow-sm border border-picton-blue-100">
                  <h3 class="font-bold text-gray-900 mb-2">{project.name}</h3>
                  <p class="text-sm text-gray-700" set:html={project.description} />
                </div>
              ))}
            </div>
          </section>
          -->
        </div>
      </div>
    </div>
  </body>
</html>
