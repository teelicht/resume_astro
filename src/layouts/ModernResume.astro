---
import "@fontsource/poppins";
import "../styles.css";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import TimelineItem from "../components/TimelineItem.astro";
import SkillList from "../components/SkillList.astro";
import LanguageBar from "../components/LanguageBar.astro";
import { Icon } from 'astro-icon/components';
import { marked } from 'marked';

interface Props {
  frontmatter: {
    title: string;
    name: string;
    role: string;
    pdfLink: string;
    about?: string;
    lang?: 'en' | 'de';
    socials: {
      name: string;
      url: string;
      icon: string;
    }[];
    facts: {
      email: string;
      location: string;
      nationality: string;
      birth: string;
    };
    competencies: {
      leadership: string[];
      technology: string[];
    };
    languages: {
      language: string;
      level: string;
    }[];
    leadershipPillars?: {
      title: string;
      description: string;
    }[];
    experience?: {
      title: string;
      company: string;
      date: string;
      description: string;
    }[];
    education?: {
      title: string;
      institution: string;
      date: string;
      description?: string;
    }[];
    strings: {
      facts: string;
      download: string;
      downloadPdf: string;
      competencies: string;
      leadership: string;
      technology: string;
      languages: string;
      leadershipPillarsTitle: string;
      aboutTitle: string;
      workExperience: string;
      education: string;
    };
  };
}

const PDF_VIEW = import.meta.env.PUBLIC_PDF_VIEW === "true";
const FORCE_THEME = import.meta.env.FORCE_THEME || "";
const { frontmatter } = Astro.props;
const { name, role, socials, facts, competencies, languages, pdfLink, leadershipPillars, experience, education, strings, lang = 'en' } = frontmatter;

function getLanguagePercent(level: string) {
  const l = level.toLowerCase();
  if (l.includes('native') || l.includes('muttersprache')) return 100;
  if (l.includes('fluent') || l.includes('flieÃŸend')) return 90;
  if (l.includes('proficient')) return 75;
  return 60;
}

const linkedIn = socials.find(s => s.name.toLowerCase().includes('linkedin'));
const contactMe = socials.find(s => s.name.toLowerCase().includes('contact') || s.name.toLowerCase().includes('email'));
---

<!doctype html>
<html lang={lang} class={FORCE_THEME}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{frontmatter.title}</title>
  </head>
  <body class="bg-slate-50 text-slate-600 antialiased selection:bg-indigo-100 selection:text-indigo-800 pb-12 border-t-4 border-indigo-800">
    
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
      
      <!-- Language Switcher -->
      {!PDF_VIEW && (
        <div class="flex justify-end mb-6 print:hidden">
          <LanguageSwitcher currentLang={lang} />
        </div>
      )}

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <!-- Sidebar -->
        <aside class="lg:col-span-4 space-y-6 print:space-y-0 print:grid print:grid-cols-2 print:gap-2">
          
          <!-- Profile Card -->
          <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 lg:sticky lg:top-8 print:static print:shadow-none print:border-slate-300 print:row-span-3">
            <div class="flex flex-col items-center text-center">
              <div class="w-24 h-24 bg-indigo-800 rounded-full flex items-center justify-center text-white text-3xl font-bold shadow-sm mb-4 print:shadow-none">
                {name.split(' ').map(n => n[0]).join('')}
              </div>
              <h1 class="text-2xl font-bold text-slate-900">{name}</h1>
              <p class="text-indigo-800 font-medium">{role}</p>
              
              <div class="mt-6 w-full space-y-3 print:hidden">
                {contactMe && (
                  <a href={contactMe.url} class="flex items-center justify-center w-full px-4 py-2 bg-indigo-800 text-white rounded-lg hover:bg-indigo-900 transition-colors text-sm font-medium shadow-sm">
                    {contactMe.name}
                  </a>
                )}
                {!PDF_VIEW && (
                  <a href={pdfLink} class="flex items-center justify-center w-full px-4 py-2 bg-white border border-slate-200 text-slate-700 rounded-lg hover:bg-indigo-50 hover:border-indigo-200 hover:text-indigo-800 transition-all text-sm font-medium">
                    <Icon name="mdi:download" class="w-4 h-4 mr-2 text-slate-400 group-hover:text-indigo-500" />
                    {strings.download}
                  </a>
                )}
              </div>
            </div>

            <div class="mt-8 border-t border-slate-100 pt-6 space-y-3 text-sm">
              <div class="flex items-center text-slate-600">
                <Icon name="mdi:map-marker" class="w-4 h-4 text-slate-400 mr-3" />
                {facts.location}
              </div>
              <div class="flex items-center text-slate-600">
                <Icon name="mdi:email" class="w-4 h-4 text-slate-400 mr-3" />
                <a href={`mailto:${facts.email}`} class="hover:text-indigo-800 transition-colors">{facts.email}</a>
              </div>
              {linkedIn && (
                <div class="flex items-center text-slate-600">
                  <Icon name="mdi:linkedin" class="w-4 h-4 text-slate-400 mr-3" />
                  <a href={linkedIn.url} class="hover:text-indigo-800 transition-colors">LinkedIn Profile</a>
                </div>
              )}
            </div>
          </div>

          <!-- Skills -->
          <SkillList title={strings.leadership} skills={competencies.leadership} color="indigo" />
          <SkillList title={strings.technology} skills={competencies.technology} color="teal" />

          <!-- Languages -->
          <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 print:shadow-none print:border-slate-300">
            <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-4">{strings.languages}</h3>
            <div class="space-y-3">
              {languages.map(lang => (
                <LanguageBar language={lang.language} level={lang.level} percent={getLanguagePercent(lang.level)} />
              ))}
            </div>
          </div>

        </aside>

        <!-- Main Content -->
        <main class="lg:col-span-8 space-y-8">
          
          <!-- About Me -->
          {frontmatter.about && (
            <section class="bg-white rounded-2xl shadow-sm border border-slate-100 p-8 print:shadow-none print:border-slate-300">
              <h2 class="text-xl font-bold text-slate-900 mb-4">{strings.aboutTitle}</h2>
              <div class="prose prose-slate max-w-none text-slate-600 leading-relaxed" set:html={marked.parse(frontmatter.about)} />
            </section>
          )}

          <!-- Leadership Pillars -->
          {leadershipPillars && leadershipPillars.length > 0 && (
            <section>
              <h2 class="text-xl font-bold text-slate-900 mb-6 flex items-center">
                 <span class="bg-indigo-50 text-indigo-800 w-8 h-8 rounded-lg flex items-center justify-center mr-3">
                    <Icon name="mdi:star" class="w-5 h-5" />
                 </span>
                 {strings.leadershipPillarsTitle}
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {leadershipPillars.map((pillar) => (
                  <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100 hover:shadow-md transition-shadow print:shadow-none print:border-slate-300">
                    <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-4">{pillar.title}</h3>
                    <p class="text-sm text-slate-600 leading-relaxed">{pillar.description}</p>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- Work Experience -->
          {experience && experience.length > 0 && (
            <section>
              <h2 class="text-xl font-bold text-slate-900 mb-6 flex items-center">
                <span class="bg-indigo-50 text-indigo-800 w-8 h-8 rounded-lg flex items-center justify-center mr-3">
                  <Icon name="mdi:briefcase" class="w-5 h-5" />
                </span>
                {strings.workExperience}
              </h2>

              <div class="relative border-l-2 border-slate-200 ml-4 space-y-8">
                {experience.map((job, index) => (
                  <TimelineItem 
                    title={job.title} 
                    company={job.company} 
                    date={job.date} 
                    current={index === 0}
                  >
                    <div class="prose prose-sm prose-slate max-w-none" set:html={marked.parse(job.description)} />
                  </TimelineItem>
                ))}
              </div>
            </section>
          )}

          <!-- Education -->
          {education && education.length > 0 && (
            <section>
              <h2 class="text-xl font-bold text-slate-900 mb-6 flex items-center">
                <span class="bg-teal-50 text-teal-600 w-8 h-8 rounded-lg flex items-center justify-center mr-3">
                  <Icon name="mdi:school" class="w-5 h-5" />
                </span>
                {strings.education}
              </h2>
              <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 space-y-6 print:shadow-none print:border-slate-300">
                {education.map((edu, index) => (
                  <>
                    {index > 0 && <div class="w-full border-t border-slate-100"></div>}
                    <div class="flex justify-between items-start">
                      <div>
                        <h3 class="text-lg font-bold text-slate-900">{edu.title}</h3>
                        <div class="text-slate-500">{edu.institution}</div>
                        {edu.description && (
                          <p class="text-sm text-slate-400 mt-1">{edu.description}</p>
                        )}
                      </div>
                      <span class="text-sm text-slate-500 font-medium bg-slate-100 px-3 py-1 rounded-full h-fit text-nowrap ml-2">{edu.date}</span>
                    </div>
                  </>
                ))}
              </div>
            </section>
          )}

        </main>
      </div>
      
      <div class="mt-12 text-center text-slate-400 text-sm pb-8 print:hidden">
        &copy; {new Date().getFullYear()} {name}. Built with Astro & Tailwind CSS.
      </div>

    </div>
  </body>
</html>

