---
import "@fontsource/poppins";
import Download from "../components/Download.astro";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import "../styles.css";

type Props = {
  frontmatter: {
    title: string;
    pdfLink: string;
    noIndex?: boolean;
    description?: string;
    lang?: 'en' | 'de';
  };
};

const PDF_VIEW = import.meta.env.PUBLIC_PDF_VIEW === "true";
const FORCE_THEME = import.meta.env.FORCE_THEME || "";

const { title, pdfLink, noIndex, description, lang = "en" } = Astro.props
  .frontmatter as Props["frontmatter"];


---
<!doctype html>
<html lang={lang} class={FORCE_THEME}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    
    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest" />
    
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description || title} />
    {noIndex && <meta name="robots" content="noindex" />}
    <title>{title}</title>
    <link rel="canonical" href={lang === "en" ? "/" : "/de"} />
    {lang === "en" ? (
      <link rel="alternate" hreflang="de" href="/de" />
    ) : (
      <link rel="alternate" hreflang="en" href="/" />
    )}
  </head>
  <body class={!PDF_VIEW ? "bg-tl-bluegray-50 dark:bg-tl-bluegray-950 sm:my-14" : ""}>
    <!-- DEBUG: PDF_VIEW = {JSON.stringify(PDF_VIEW)}, import.meta.env.PUBLIC_PDF_VIEW = {JSON.stringify(import.meta.env.PUBLIC_PDF_VIEW)} -->
    <div class="container mx-auto">
      <div class="flex justify-center">
        <article class="minimalist relative">
          {
            !PDF_VIEW && (
              <div class="not-prose absolute right-4 top-4">
                <LanguageSwitcher currentLang={lang} />
              </div>
            )
          }
          <div
            class="absolute top-4 rounded-sm py-1 sm:left-6 sm:top-2"
          >
            <div
              class="flex h-fit select-none flex-col items-center"
            >
            <img src="/favicon.svg" alt="Thomas Lichtenecker Logo" class="w-16 h-16 border-0 bg-transparent" />
          </div>
          </div>
          {
            !PDF_VIEW && (
              <div class="not-prose absolute right-4 top-16">
                <Download href={pdfLink} />
              </div>
            )
          }
          <slot />
           {
             !PDF_VIEW && (
               <div class="not-prose absolute right-4 top-16">
                 <Download href={pdfLink} />
               </div>
             )
           }
        </article>
      </div>
    </div>
    <style></style>
  </body>
</html>
