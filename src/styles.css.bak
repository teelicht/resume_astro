:root {
  --color-tl-bluegray: oklch(53.994% 0.08596 279.12);
  --color-tl-bluegray-50: oklch(88.288% 0.02051 282.92);
  --color-tl-bluegray-100: oklch(84.638% 0.02637 281.03);
  --color-tl-bluegray-200: oklch(77.145% 0.04124 282.26);
  --color-tl-bluegray-300: oklch(69.67% 0.05417 281.25);
  --color-tl-bluegray-400: oklch(61.791% 0.07105 280.32);
  --color-tl-bluegray-500: oklch(53.994% 0.08596 279.12);
  --color-tl-bluegray-600: oklch(45.372% 0.07201 278.15);
  --color-tl-bluegray-700: oklch(36.49% 0.05689 279.19);
  --color-tl-bluegray-800: oklch(27.219% 0.03716 279.22);
  --color-tl-bluegray-900: oklch(16.788% 0.01665 284.46);
  --color-tl-bluegray-950: oklch(9.8901% 0.00819 284.8);
}

body {
  font-family: "Poppins", sans-serif;
}

::selection {
  background-color: var(--color-tl-bluegray-400);
  color: white;
}

article.minimalist {
  @apply prose prose-slate m-0
    max-w-fit bg-white px-12 py-8 pt-20 dark:prose-invert prose-h1:text-3xl prose-h1:uppercase prose-h2:mb-3 prose-h2:mt-8 prose-h2:text-sm
    prose-h2:uppercase prose-h2:text-slate-500
    prose-h3:mb-3 prose-h3:mt-8 prose-h3:text-lg prose-h3:uppercase prose-h4:mb-3
    prose-h4:mt-4 prose-h4:text-base prose-h4:font-bold prose-h4:text-slate-600 prose-p:my-2
    prose-p:text-sm prose-p:leading-6 prose-a:font-bold prose-a:no-underline prose-a:transition-colors 
    hover:prose-a:text-slate-400 prose-li:text-sm prose-table:mt-4 prose-thead:border-0
    prose-th:p-0 prose-th:font-medium prose-td:p-0
    prose-td:text-slate-500
    dark:bg-slate-800
    prose-h4:dark:text-slate-400  
    sm:px-24 sm:py-14
    lg:max-w-6xl;
}

/* Fix table column widths - make first column fit content */
article.minimalist table {
  table-layout: auto;
}

article.minimalist th:first-child,
article.minimalist td:first-child {
  width: auto;
  white-space: nowrap;
  padding-right: 1rem; /* ~16px of space */
}

article.minimalist th:last-child,
article.minimalist td:last-child {
  width: 100%;
}
