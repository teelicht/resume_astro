---
interface Props {
  currentLang: 'en' | 'de';
}

const { currentLang } = Astro.props;
---

<div class="flex space-x-2">
  <a
    href="/"
    class:list={[
      "px-2 py-1 text-sm font-medium rounded-md",
      currentLang === 'en'
        ? "text-white bg-indigo-600 shadow-md hover:bg-indigo-700 font-semibold dark:text-white dark:bg-indigo-700 dark:hover:bg-indigo-600"
        : "text-gray-600 bg-gray-200 hover:bg-gray-300 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700"
    ]}
    aria-current={currentLang === 'en' ? 'page' : false}
    aria-label={currentLang === 'en' ? 'Current language: English' : 'Switch to English'}
  >
    English
  </a>
  <a
    href="/de"
    class:list={[
      "px-2 py-1 text-sm font-medium rounded-md",
      currentLang === 'de'
        ? "text-white bg-indigo-600 shadow-md hover:bg-indigo-700 font-semibold dark:text-white dark:bg-indigo-700 dark:hover:bg-indigo-600"
        : "text-gray-600 bg-gray-200 hover:bg-gray-300 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700"
    ]}
    aria-current={currentLang === 'de' ? 'page' : false}
    aria-label={currentLang === 'de' ? 'Current language: German' : 'Switch to German'}
  >
    Deutsch
  </a>
</div>