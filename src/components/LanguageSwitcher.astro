---
interface Props {
  currentLang: 'en' | 'de';
}

const { currentLang } = Astro.props;
---

<div class="flex space-x-2">
  <a
    href="/"
    class:list={[
      "px-2 py-1 text-sm font-medium rounded-md",
      currentLang === 'en'
        ? "text-white bg-tl-bluegray-500 shadow-md hover:bg-tl-bluegray-600 font-semibold dark:text-white dark:bg-tl-bluegray-600 dark:hover:bg-tl-bluegray-500"
        : "text-tl-bluegray-700 bg-tl-bluegray-100 hover:bg-tl-bluegray-200 dark:text-tl-bluegray-300 dark:bg-tl-bluegray-800 dark:hover:bg-tl-bluegray-700"
    ]}
    aria-current={currentLang === 'en' ? 'page' : false}
    aria-label={currentLang === 'en' ? 'Current language: English' : 'Switch to English'}
  >
    English
  </a>
  <a
    href="/de"
    class:list={[
      "px-2 py-1 text-sm font-medium rounded-md",
      currentLang === 'de'
        ? "text-white bg-tl-bluegray-500 shadow-md hover:bg-tl-bluegray-600 font-semibold dark:text-white dark:bg-tl-bluegray-600 dark:hover:bg-tl-bluegray-500"
        : "text-tl-bluegray-700 bg-tl-bluegray-100 hover:bg-tl-bluegray-200 dark:text-tl-bluegray-300 dark:bg-tl-bluegray-800 dark:hover:bg-tl-bluegray-700"
    ]}
    aria-current={currentLang === 'de' ? 'page' : false}
    aria-label={currentLang === 'de' ? 'Current language: German' : 'Switch to German'}
  >
    Deutsch
  </a>
</div>