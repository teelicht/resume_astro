---
interface Props {
  currentLang: 'en' | 'de';
}

const { currentLang } = Astro.props;
---

<div class="flex space-x-2">
  <a
    href="/"
    class:list={[
      "px-2 py-1 text-sm font-medium rounded-md",
      currentLang === 'en'
        ? "text-white bg-picton-blue-900 shadow-md hover:bg-picton-blue-800 font-semibold dark:text-white dark:bg-picton-blue-800 dark:hover:bg-picton-blue-700"
        : "text-picton-blue-700 bg-white border border-picton-blue-200 hover:bg-picton-blue-50 dark:text-picton-blue-300 dark:bg-gray-900 dark:border-picton-blue-800 dark:hover:bg-gray-800"
    ]}
    aria-current={currentLang === 'en' ? 'page' : false}
    aria-label={currentLang === 'en' ? 'Current language: English' : 'Switch to English'}
  >
    English
  </a>
  <a
    href="/de"
    class:list={[
      "px-2 py-1 text-sm font-medium rounded-md",
      currentLang === 'de'
        ? "text-white bg-picton-blue-900 shadow-md hover:bg-picton-blue-800 font-semibold dark:text-white dark:bg-picton-blue-800 dark:hover:bg-picton-blue-700"
        : "text-picton-blue-700 bg-white border border-picton-blue-200 hover:bg-picton-blue-50 dark:text-picton-blue-300 dark:bg-gray-900 dark:border-picton-blue-800 dark:hover:bg-gray-800"
    ]}
    aria-current={currentLang === 'de' ? 'page' : false}
    aria-label={currentLang === 'de' ? 'Current language: German' : 'Switch to German'}
  >
    Deutsch
  </a>
</div>