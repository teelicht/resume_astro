---
interface Props {
  currentLang: 'en' | 'de';
}

const { currentLang } = Astro.props;

const commonClasses = "px-3 py-1.5 rounded-md text-sm font-medium transition-colors";
const activeClasses = "bg-indigo-50 text-indigo-800 shadow-sm cursor-default";
const inactiveClasses = "text-slate-500 hover:text-slate-900";
---

<div class="bg-white p-1 rounded-lg border border-slate-200 shadow-sm inline-flex">
  <a
    href="/"
    class:list={[
      commonClasses,
      currentLang === 'en' ? activeClasses : inactiveClasses
    ]}
    aria-current={currentLang === 'en' ? 'page' : false}
    aria-label={currentLang === 'en' ? 'Current language: English' : 'Switch to English'}
  >
    English
  </a>
  <a
    href="/de"
    class:list={[
      commonClasses,
      currentLang === 'de' ? activeClasses : inactiveClasses
    ]}
    aria-current={currentLang === 'de' ? 'page' : false}
    aria-label={currentLang === 'de' ? 'Current language: German' : 'Switch to German'}
  >
    Deutsch
  </a>
</div>