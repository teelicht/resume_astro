{
  "name": "astro-resume",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "postinstall": "npx playwright install",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:pdf": "PUBLIC_PDF_VIEW=true astro build",
    "preview": "astro preview --port 4325",
    "generate-pdf": "node ./scripts/generate-pdf.js",
    "generate-pdf:ci": "PORT=4325 node ./scripts/generate-pdf.js",
    "pdf": "pnpm build:pdf && start-server-and-test preview http://localhost:4325 generate-pdf:ci",
    "check": "astro check && tsc --noEmit",
    "test": "astro check && tsc --noEmit"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.1.4",
    "@fontsource/poppins": "^5.2.5",
    "@netlify/plugin-lighthouse": "^6.0.4",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.13.8",
    "cross-env": "^10.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "start-server-and-test": "^2.0.11",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "astro": "^5.7.10",
    "playwright": "^1.56.1"
  }
}
